# 환경 변수 예시 파일
# 실제 값으로 복사하여 .env 파일 생성

# 애플리케이션 설정
DEBUG=False
APP_NAME="DD Investment API"

# Google Cloud SQL PostgreSQL 설정 (개발용 예시는 host.docker.internal 권장)
DATABASE_HOST = host.docker.internal
DATABASE_PORT = 5432
DATABASE_NAME = finance_db
DATABASE_USER = postgres
DATABASE_PASSWORD = 'your-password-here'

# Google Cloud 프로젝트 정보
GCP_PROJECT_ID = ddinvestment
GCP_REGION = asia-northeast3
GCP_INSTANCE_NAME = ddinvestment:asia-northeast3:dd-investment

# API 키들
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
NEWS_API_KEY=your-news-api-key

# 보안 설정
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
