# 프로덕션 환경 변수 예시 파일
# 실제 값으로 복사하여 .env.production 파일 생성
# ⚠️ 이 파일은 Git에 포함되지만, .env.production은 .gitignore에 포함되어 Git에 커밋되지 않습니다.

# 애플리케이션 설정
DEBUG=False
APP_NAME="DD Investment API"

# 데이터베이스 설정
# 옵션 1: VM 내부 PostgreSQL 사용
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=finance_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password-here

# 옵션 2: Cloud SQL 사용 (Cloud SQL 사용 시 아래 주석 해제)
# DATABASE_HOST=34.64.149.167  # Cloud SQL IP 주소 (GCP Console → Cloud SQL → 연결 탭에서 확인)
# DATABASE_PORT=5432
# DATABASE_NAME=finance_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-cloud-sql-password

# GCP 프로젝트 정보 (GCP Console 상단에서 확인)
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-northeast3
GCP_INSTANCE_NAME=your-project-id:asia-northeast3:your-instance-name

# API 키들
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
NEWS_API_KEY=your-news-api-key

# 보안 설정
# SECRET_KEY는 강력한 랜덤 문자열 사용 (예: openssl rand -hex 32)
SECRET_KEY=your-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30




